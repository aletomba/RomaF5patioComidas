@using RomaF5patioComidas.Models.ViewModels
@model CarritoPedido

@if (Model!= null)
{
    <div class="mt-3 p-3 text-white bg-success">
        <p>Pedidos: <span class="badge badge-primary">@Model.Numeropedidos</span></p>
        <p>Total: <b>@Model.TotalMonto.ToString()</b></p>
        <a class="btn btn-primary" asp-route-id="@Model.Id" asp-controller="Pedido" asp-action="Details">Ver Detalle</a>
        <a class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Pedido" asp-action="Cobrar">Cobrar</a>       
    </div>
    

}
else
{
    <div class = "mt-3 p-3 text-white bg-success">
        <p class="lead m-0">Carrito vacio</p>
    </div>
    
}


